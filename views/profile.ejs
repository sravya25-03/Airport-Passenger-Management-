<style >

.rel{
    margin-right: 900px;
}
#stick_page{
    overflow: hidden;
    position: fixed;
    background-color: black;
    width: 100%;
    top: 0;
    z-index:99;
    padding-top: 5px;

}

.alice{
    color: #fff;
}

.hit{
    height:65px;
}
.black{
  color:white;
}
.black:hover{
  color:#FFF38C;
}
a:hover{
		color: aliceblue;
}

.bg-image{
	background-image: url("/images/cover2.jpg");
height:950px;
	background-repeat: no-repeat;
	background-size: cover;
	filter:blur(8px);

	background-position: center;
}

.footer{
		text-align: center;
		padding: 20px auto 20px;
		position:fixed;
		bottom:0;
		width:100%;

}
.small{
		height: 20px;
}
.bg-text{
