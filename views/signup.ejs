<!DOCTYPE html>
<html>
<head>
	<title>Slide Navbar</title>
	<link rel="stylesheet" type="text/css" href="/signup.css">
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>
	<div class="big">
	<a href="index"><h4 class="u">RETURN TO HOME</h4></a>
	</div>


	<% if(typeof message!="undefined"&&message){ %><h4 class="alert mt-4" style="text-align: center;"><%=message%></h4><% } %>


	<div class="main">
		<input type="checkbox" id="chk" aria-hidden="true">

			<div class="signup">
				<form action="/auth/signup" method="POST">
					<label for="chk" aria-hidden="true">Sign up</label>
					<input type="text" name="userName" placeholder="User name" required="">
					<input type="email" name="email" placeholder="Email" required="">
          <input type="number" name="phoneNumber" placeholder="Phone Number" required="">
					<input type="password" name="password" placeholder="Password" required="">
          <input type="password" name="confirmPassword" placeholder="Confirm Password" required="">

					<button>Sign up</button>
				</form>
			</div>

            <div class="login">
                <form>
                    <label for="chk" aria-hidden="true"><a href="login" style="color:#000">Login</a> </label>
                    <button>Login</button>
                </form>
            </div>
	</div>


	<!-- footer -->
	<div class="fo">
		<footer class="footer bg-dark pt-3 pb-3 ">
			<span class="k">Follow us on:</span>
			<img class="small" src="/images/facebook.png" alt="">
			<img class="small" src="/images/instagram.png" alt="">
			<img class="small" src="/images/twitter.png" alt="">
			<img class="small" src="/images/linkedin.png" alt="">
		</footer>
	</div>



</body>
</html>
